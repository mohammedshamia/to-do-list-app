<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A2CCF "
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/arrow_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:alpha="0.7"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:text="View Task"
            android:textColor="#FFFFFF "
            android:textSize="22dp"
            />

        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="15dp"
            android:gravity="end"
            android:text="Done"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/editdescraption"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Meet Joseph"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="15dp"
                android:textStyle="bold"
                android:textSize="24sp"
                />

            <EditText
                android:id="@+id/categoryList"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="MEET"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/edit_meet"
                android:textSize="20sp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="01 October 2018, 10:00"
            android:gravity="top"
            android:alpha="0.5"
            android:textSize="20dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:text="Description"
            android:textSize="35dp"
            android:alpha="0.5"
            />
        <EditText
            android:id="@+id/editDescription"
            android:layout_width="260dp"
            android:lineSpacingExtra="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="top"
            android:textColor="@color/black"
            android:text="Have to meet him because I want to show him my latest app design in person."
            android:textSize="14sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/deleteTask"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Delete"
            android:textSize="25sp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            android:alpha=".5"
            android:gravity="start"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"

            />
    </LinearLayout>
</LinearLayout>



